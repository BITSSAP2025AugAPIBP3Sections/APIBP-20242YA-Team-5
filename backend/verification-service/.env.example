# Server Configuration
NODE_ENV=development
PORT=3004
SERVICE_NAME=verification-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=verification_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=2
DB_POOL_MAX=10

# Certificate Service URL (for fetching certificate data)
CERTIFICATE_SERVICE_URL=http://localhost:3003

# University Service URL (for fetching public keys)
UNIVERSITY_SERVICE_URL=http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BULK_RATE_LIMIT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# CORS
CORS_ORIGIN=*

# Cache Configuration (Optional - Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=3600

# Verification Settings
MAX_BULK_VERIFICATION=100
VERIFICATION_LOG_RETENTION_DAYS=90
